<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="模型训练"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- 模型信息 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5F5F5"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="模型信息"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/model_accuracy_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="当前模型精度: 未训练"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="模型类型: 障碍物检测模型"
            android:textSize="14sp"
            android:textColor="#666666" />

    </LinearLayout>

    <!-- 训练进度 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="训练进度"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/training_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="准备就绪"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <ProgressBar
            android:id="@+id/training_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="0" />

    </LinearLayout>

    <!-- 控制按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <!-- 开始训练按钮 -->
        <Button
            android:id="@+id/start_training_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="开始训练"
            android:textColor="@color/white"
            android:background="@drawable/button_green"
            android:layout_marginEnd="8dp"
            android:padding="12dp" />

        <!-- 停止训练按钮 -->
        <Button
            android:id="@+id/stop_training_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="停止训练"
            android:textColor="@color/white"
            android:background="@drawable/button_red"
            android:layout_marginStart="8dp"
            android:padding="12dp" />

    </LinearLayout>

    <!-- 数据操作按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <!-- 导入数据按钮 -->
        <Button
            android:id="@+id/import_data_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="导入数据"
            android:textColor="@color/white"
            android:background="@drawable/button_blue"
            android:layout_marginEnd="8dp"
            android:padding="12dp" />

        <!-- 导出模型按钮 -->
        <Button
            android:id="@+id/export_model_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="导出模型"
            android:textColor="@color/white"
            android:background="@drawable/button_blue"
            android:layout_marginStart="8dp"
            android:padding="12dp" />

    </LinearLayout>

    <!-- 训练日志 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="训练日志"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/training_log_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F5F5F5"
        android:padding="8dp" />

</LinearLayout>



